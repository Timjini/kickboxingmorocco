<section>
    <div class="container">
        <div class="row">
            <div class="col-md-8">

            <%= image_tag(@programme.image_cover, class:"")%>

            </div>
            <div class="col-md-4">
                <h2><%=@programme.name%></h2>
                <div class="row">
                    <div class="col-md-6">
                        <span><%= @programme.heure.to_s %></span>
                    </div>
                    <div class="col-md-6">
                        <span><%= @programme.jour %></span>
                    </div>
                </div>
            </div>

        </div>
    </div>

</section>