<%= render "components/header"%>

<div class= "container mt-5 mb-5">

  <%= form_for @contact do |f| %>
  <h1 class=""> Contactez-Nouz </h1>

<form>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputEmail4">Email</label>
      <%= f.text_field :email, class:"form-control", placeholder:"Votre email" %>
    </div>
    <div class="form-group col-md-6">
      <label for="inputphone">Telephone</label>
      <%=f.text_field :phone, class:"form-control"%>
    </div>
  </div>
  <div class="form-group">
    <label for="inputAddress">Votre Nom</label>
    <%= f.text_field :name, class:"form-control" , placeholder:"Entrez votre nom"%>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="inputCity">Message</label>
      <%= f.text_area :message, class:"form-control", placeholder:"Laissez un message" %>
    </div>
  </div>
  <%= f.submit "ENVOYEZ"%>
</form>
</div>
<%end%>

<%=render 'components/map'%>